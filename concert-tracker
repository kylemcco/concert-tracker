#!/usr/bin/env ruby
require 'highline/import'

if ARGV.length < 1
  print "[Help] Run as: ./concert-tracker manage"
elsif ARGV.length == 1
  if ARGV[0] != 'manage'
    print "[Help] Run as: ./concert-tracker manage"
  else
    choose do |menu|
      menu.prompt = ""
      
      menu.choice('Add a concert') { say("Not available yet") }
      menu.choice('Manage concerts') { say("Not available yet") }
      menu.choice('View statistics') { say("Not available yet") }
      menu.choice('Exit') { say("Welp, seeya later\n") }
    end
  end
end
